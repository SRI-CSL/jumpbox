// http://developer.chrome.com/extensions/manifest.html
{

  "name": "JumpBox",
  "description": "This extension is the Stegotorus client's conduit to the Stegotorus server and provides Rendezvous and ACS support from inside the browser.",
  "version": "1.0",
  "manifest_version": 2,

  "options_page": "preferences.html",

  "browser_action": {
    "default_icon": "jumpbox.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"]           
   },


  "permissions": [
    "browsingData",  
    "tabs",
    "background",
    "<all_urls>",         
    "webRequest",
    "webRequestBlocking",
    "http://*/",
    "https://*/"
  ]
}
